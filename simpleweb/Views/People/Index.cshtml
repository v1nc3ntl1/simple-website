@model IEnumerable<simpleweb.Models.Person>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <b>@item.Name</b><br />
                <table class="subject">
                    <tr>
                        @foreach (var examScore in item.ExamScores)
                        {
                            <th>@examScore.Subject</th>
                        }
                    </tr>
                    <tr>
                        @foreach (var examScore in item.ExamScores)
                        {
                            <td>@examScore.ExamScore</td>
                        }
                    </tr>
                </table>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                <br />
            </td>
            </tr>
        }

</table>
